<!-- Sign up page, new users -->
<div class="jumbotron">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

    	<h1><span class="fa fa-user"></span></h1>

    	<!-- show any messages that come back with authentication -->

    	<!-- SIGNUP FORM -->
    	<form method="post">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-check-square-o fa-fw"></i></span>
            <input class="form-control fname-input" type="text" placeholder="First name">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-check-square-o fa-fw"></i></span>
            <input class="form-control lname-input" type="text" placeholder="Last name">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <input class="form-control email-input" type="email" placeholder="Email address">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
            <input class="form-control password-input" type="password" placeholder="Password">
          </div>
        </div>

    		<button class="btn btn-warning btn-lg signup-submit">Sign Up</button>
    	</form>

    	<hr>

    	<p>Already have an account? </p>
      <a href="/login" class="btn btn-info btn-md">Log In</a>

    </div>
  </div>
</div>
