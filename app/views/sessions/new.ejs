<!-- Login page, new sessions -->
<div class="jumbotron">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

    	<h1><span class="fa fa-sign-in"></span> <%= title %></h1>

    	<!-- show any messages that come back with authentication -->

    	<!-- LOGIN FORM -->

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <input id="email_address" class="form-control" type="email" placeholder="Email address">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
            <input id="password" class="form-control" type="password" placeholder="Password">
          </div>
        </div>

    		<button type="submit" class="btn btn-info btn-lg login-btn">Log In</button>
    

    	<hr>

      <p>Forgot email/password?</p>
      <a href="/signup" class="btn btn-danger btn-md">Reset account</a>

    </div>
  </div>
</div>
